<div class="tool_box--holder">
  <div class="row align-middle align-right">
    <div class="google_footer small-4 medium-5 columns">
      <img src="assets/images/powered-by-google/android/res/drawable-hdpi/powered_by_google_on_white.png" alt="powered-by-google" >
    </div>
    <div class="tool_box small-8 medium-7 columns">
      <div class="button-group tool_box--button-group">
        {{#if toolShowMap}}
          {{#link-to "map" class="button tool_box--button"}}<i class="tool_box--icon fa fa-map-marker"></i>Map{{/link-to}}
        {{/if}}
        {{#if toolShowList}}
          {{#link-to "places" class="button tool_box--button"}}<i class="tool_box--icon fa fa-th-list"></i>List{{/link-to}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
